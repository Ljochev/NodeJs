<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="global.css">
  </head>
  <body>
    <header>
        <h1>Dobredojdovte na stranata za recepti</h1>
    </header>
    <form action="/edit?index=<%=data.index%>" method="post">
      <p><%=data.index%></p>
      <p>Ime na recept: <input type="text" name="ime" required value = "<%=data.ime%>" ></p>
      <p>Sostojki:</p>
      <div id="ingrediants">
        <%data.sostojki.forEach((sostojka, i) => { %>
        <input type="text" name = "sostojka<%=i%>" value="<%=sostojka%>">
        <%})%>
      </div>
    <p>Vreme za podgotovka: <input type="text" name="time" required value = "<%=data.time%>"></p>
    <p>Nacin na podgotovka: </p>
    <div id="stepByStep">
        <%data.making.forEach((step, i) => { %>
            <input type="text" name = "steps<%=i%>" value="<%=step%>">
            <%})%>
    </div>
      <button id="editData" type="submit">Promeni</button>
  </form>
  <button><a href="/recepti">Prikazi gi receptite</a></button>
  </body>
</html>
